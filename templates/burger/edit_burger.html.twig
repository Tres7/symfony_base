{% extends 'base.html.twig' %}
{% block title %}Burger : " - $burger.id"{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="text-center">Add new Burger</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.price) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.content) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.pain) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.oignon) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.sauce) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.image) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('burgers') }}" class="btn btn-secondary">Retourner Ã  la liste</a>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
